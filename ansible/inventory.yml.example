---
# Ansible Inventory for Slurm Usage History Application
#
# Usage:
#   ansible-playbook -i inventory.yml playbook.yml

all:
  children:
    workstations:
      hosts:
        slurm-dashboard:
          ansible_host: 192.168.1.100  # Change to your workstation IP
          ansible_user: your-user       # Change to your username
          ansible_python_interpreter: /usr/bin/python3

          # You can also add more hosts:
          # slurm-dashboard-2:
          #   ansible_host: 192.168.1.101
          #   ansible_user: your-user
