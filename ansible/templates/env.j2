# API Keys for data ingestion (comma-separated)
API_KEYS={{ api_keys }}

# Data directory path
DATA_PATH={{ app_data_dir }}

# Auto-refresh interval in seconds
AUTO_REFRESH_INTERVAL={{ auto_refresh_interval | default(600) }}

# CORS origins for frontend
CORS_ORIGINS={{ cors_origins }}

# SAML Configuration
ENABLE_SAML={{ enable_saml | default(true) }}
SAML_SETTINGS_PATH={{ app_base_dir }}/saml/settings.json

# Session secret key (for JWT tokens)
SECRET_KEY={{ secret_key }}

# Application URLs
BASE_URL={{ base_url }}
