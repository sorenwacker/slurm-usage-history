FROM python:3.10-slim

WORKDIR /app

# Install system dependencies for SAML
RUN apt-get update && apt-get install -y \
    build-essential \
    libxml2-dev \
    libxmlsec1-dev \
    libxmlsec1-openssl \
    pkg-config \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Copy dependency files
COPY pyproject.toml uv.lock README.md ./
COPY _version.py ./_version.py

# Copy source code
COPY src ./src
COPY backend ./backend

# Set version for setuptools-scm
ENV SETUPTOOLS_SCM_PRETEND_VERSION=1.0.0

# Install dependencies with web extras (includes SAML)
# Use non-editable install since we'll remove src
RUN uv pip install --system ".[web]"

# Remove src directory after installation (package is in site-packages now)
RUN rm -rf /app/src

# Fix version lookup - package name is slurm-dashboard not slurm_usage_history
RUN sed -i 's/__version__ = version(__name__)/__version__ = version("slurm-dashboard")/g' /usr/local/lib/python3.10/site-packages/slurm_usage_history/__init__.py

# Create SAML directories
RUN mkdir -p /app/saml/certs

# Generate self-signed certificates for SAML
RUN openssl req -new -x509 -days 3650 -nodes \
    -out /app/saml/certs/sp.crt \
    -keyout /app/saml/certs/sp.key \
    -subj "/CN=localhost"

EXPOSE 8100

# Default command (can be overridden in docker-compose)
CMD ["uv", "run", "uvicorn", "backend.app.main:app", "--host", "0.0.0.0", "--port", "8100", "--reload"]
